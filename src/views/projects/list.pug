extends ../layout.pug

block content
  link(rel="stylesheet", href="/css/listados.css")
  h2 Proyectos
  if projects.length
    table
      thead
        tr
          th Nombre
          th Cliente
          th Producto
          th Estado
      tbody
        each p in projects
          tr
            td= p.name
            td= p.clientName 
            td= p.productName 
            td= p.status
  else
    p (Sin proyectos)
